<%include ../partials/header %>
<h1>Edit Patient with id <%=patient.id%></h1>
<form method="POST" action="/opd/<%=patient.id%>?_method=PUT">
    <div class="form-group">
        <label>Name: </label>
        <div class="row">
            <div class="col">
                <input type="text" name="fname" class="form-control" placeholder="First name" value="<%=person.Fname%>" required>
            </div>
            <div class="col">
                <input type="text" name="mname" class="form-control" placeholder="Middle name" value="<%=person.Mname%>">
            </div>
            <div class="col">
                <input type="text" name="lname" class="form-control" placeholder="Last name" required value="<%=person.Lname%>">
            </div>
        </div>
    </div>
    <div class="form-group">
        <label for="gender">Sex: </label>
        <div id="gender">
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="gender" id="inlineRadio1" value="Male">
                <label class="form-check-label" for="inlineRadio1">Male</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="gender" id="inlineRadio2" value="Female">
                <label class="form-check-label" for="inlineRadio2">Female</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="gender" id="inlineRadio3" value="Other">
                <label class="form-check-label" for="inlineRadio3">Others</label>
            </div>
        </div>
    </div>


    <div class="form-group">
        <label>Date of Birth: </label>
        <input type="date" name="dob" class="form-control" value="<%=person.DateOfBirth%>">
    </div>


    <div class="form-group">
        <label for="inputAddress">Address</label>
        <input type="text" class="form-control" id="inputAddress" name="address" value="<%=person.Address%>">
    </div>


    <label for="inputContact">Contact: </label>
    <div class="input-group mb-2 mr-sm-2 w-25">
        <div class="input-group-prepend">
            <div class="input-group-text">+91</div>
        </div>
        <input type="text" maxlength="10" class="form-control" name="contact" id="inputContact"value="<%=person.ContactNumber%>">
    </div>
    <div class="form-group">
        <label for="inputReferredBy">Referred By: </label>
        <input type="text" class="form-control" id="inputReferredBy" name="referredBy" value="<%=patient.ReferredBy%>">
    </div>

    <div class="form-group">
        <label for="inputConsultant">Consultant:</label>
        <select class="form-control" name="consultant" id="inputConsultant">
            <option value="">Choose...</option>
            <% Consultants.forEach(function(Consultant){ %>
            <option value="<%=Consultant.id%>"> <%=Consultant.fname%> <%=Consultant.lname%></option>
            <% }); %>
        </select>
    </div>
    <div class="form-group">
        <input type="submit" value="Save Changes" class="btn btn-primary">
    </div>
</form>
<%include ../partials/footer %>